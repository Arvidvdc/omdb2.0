<%- include("./partials/header") -%>

<h1>Zoek pagina</h1>

<form action="/results" method="GET">
    <select name="searchType">
        <option selected hidden>Soort zoekopdracht</option>
        <option value="i">imdbID</option>
        <option value="t">Titel</option>
        <option value="s">Volledig</option>
    </select>
    <input type="text" name="title" placeholder="Zoeknaam">

    <select name="Type">
        <option selected hidden value="">Series/Films/Games</option>
        <option value="series">Series</option>
        <option value="movie">Films</option>
        <option value="game">Games</option>
    </select>

    <input type="text" name="type" placeholder="Type">
    <input type="text" name="year" placeholder="Year">
    <input type="text" name="page" value="1" hidden>

    <button>Zoeken</button>
</form>

<script src="/js/main.js"></script>
<%- include("./partials/footer") -%>